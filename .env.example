# Hardhat / deployer
DEPLOYER_PRIVATE_KEY=0x...
ARC_RPC=https://rpc.testnet.arc.network

# Backend
USDC_ADDRESS=0x... # replace with Arc testnet USDC
ADMIN_PRIVATE_KEY=0x... # Dev convenience: private key used by backend to sign txs (DO NOT expose in production)
ADMIN_API_KEY=change-me # simple API key for admin routes (dev only)
ARCADIA_TIMELOCK= # optional timelock address override (otherwise hardhat/deployed.json is used)
SAFE_SERVICE_URL= # optional Gnosis Safe Transaction Service URL (e.g., https://safe-transaction.gnosis.io)

# KMS / S3 (for production)
SIGNER_TYPE=kms
KMS_KEY_ID=arn:aws:kms:us-east-1:123456:key/xxxxxxx
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566 # localstack for dev
AUDIT_S3_BUCKET=arcadia-audit
AUDIT_S3_PREFIX=timelock-audit/
AUDIT_S3_SSE=AES256
AUDIT_S3_OBJECT_LOCK=false
